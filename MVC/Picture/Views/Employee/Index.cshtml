@model IEnumerable<PictureU.Models.Employee>

<h1>PowerSoftIT's Employee</h1>

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary mb-3">Add</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Picture</th>
            <th>Actions</th>  
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(employee.PicturePath))
                    {
                        <img src="@Url.Content(employee.PicturePath)" alt="@employee.Name" style="width:100px; height:100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
