@model PictureU.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-controller="Employee" method="post" enctype="multipart/form-data" id="editEmployeeForm">
    <input type="hidden" asp-for="EmployeeId" />

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter employee name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter employee email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Picture</label><br />

        <div class="d-flex align-items-start gap-4">
            <div>
                <p class="mb-1">Current</p>
                @if (!string.IsNullOrEmpty(Model.PicturePath))
                {
                    <img id="currentPicture" src="@Url.Content(Model.PicturePath)" alt="Current Picture"
                         style="width:100px; height:100px; object-fit:cover; border: 1px solid #ccc;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </div>

            <div id="newPicturePreviewContainer" style="display:none;">
                <p class="mb-1">New Preview</p>
                <img id="newPicturePreview" src="#"
                     style="width:100px; height:100px; object-fit:cover; border: 1px solid #ccc;" />
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.PicturePath))
        {
            <button type="button" id="btnChangePic" class="btn btn-sm btn-warning mt-2">Change Picture</button>
        }

        <div id="pictureUpload" style="display:@(string.IsNullOrEmpty(Model.PicturePath) ? "block" : "none"); margin-top: 10px;">
            <input asp-for="Picture" type="file" class="form-control" id="pictureInput" accept=".jpg,.jpeg,.png" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("btnChangePic")?.addEventListener("click", function () {
            document.getElementById("pictureUpload").style.display = "block";
            this.style.display = "none";
        });

        const pictureInput = document.getElementById("pictureInput");
        const newPreviewContainer = document.getElementById("newPicturePreviewContainer");
        const newPreview = document.getElementById("newPicturePreview");

        pictureInput?.addEventListener("change", function (event) {
            const file = event.target.files[0];
            if (file) {
                const allowedTypes = ['image/jpeg', 'image/png', 'image/jpg'];
                if (!allowedTypes.includes(file.type)) {
                    alert("Only .jpg, .jpeg, and .png files are allowed.");
                    event.target.value = '';
                    newPreviewContainer.style.display = "none";
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    newPreview.src = e.target.result;
                    newPreviewContainer.style.display = "block";
                };
                reader.readAsDataURL(file);
            } else {
                newPreviewContainer.style.display = "none";
                newPreview.src = "#";
            }
        });
    </script>
}
