@model StudentCRUD.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Student Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Picture</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PicturePath))
            {
                <img src="@Model.PicturePath" alt="Picture" width="150" />
            }
            else
            {
                <span>No Image Available</span>
            }
        </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>
</div>

<a href="/Student/Index">Back to List</a>
