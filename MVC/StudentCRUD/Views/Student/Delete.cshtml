@model StudentCRUD.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this student?</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Picture</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.PicturePath))
        {
            <img src="@Model.PicturePath" alt="Student Picture" width="150" />
        }
        else
        {
            <span>No picture available</span>
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Student/Index" class="btn btn-secondary">Cancel</a>
</form>
