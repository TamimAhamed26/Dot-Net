@model LabPrac.DTO.CustomerDTO

<html>
<head>
    <title>Delete Customer</title>
</head>
<body>
    <h2>Delete Customer</h2>

    <div style="color: red;">
        <h3>Are you sure you want to delete this customer?</h3>
    </div>

    <table border="1">
        <tr>
            <td>Customer ID:</td>
            <td>@Model.CustomerId</td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <td>Address:</td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td>Date Joined:</td>
            <td>@Model.DateJoined</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        <div style="margin-top: 20px;">
            <input type="submit" value="Delete" style="color: red;" />
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</body>
</html>
